{
"name":"PSOS v00.02 - e01 device",
"main":"psos_main",

"defaults": {
    "mqtt_prefix":"e01/",
    "mqtt_name":"office_monitor",
    "mqtt_descr":"e01 - ESP32 Office Temperature and Humidity Monitor"
    },
    
"NOTE":"wifi and mqtt must be first two services",
    
"services": [
    {"name": "wifi", "module":"svc_wifi",  "wifi":"wifi_home", "disconnect":false},
    {"name": "mqtt", "module":"svc_mqtt",  "broker":"mqtt_docker_home_acer", "_broker":"mqtt_hivemq" },
    
    {"name": "log",  "module":"svc_log",   "pub_log":"e01/log" },
    
    {"name": "temp", "module":"svc_dht11", "dht11_pin":5,
             "subscr_upd":"e01/dht/upd",   "pub_upd":"e01/dht/" },

    {"name": "mem_use", "module":"svc_mem_use", 
             "subscr_upd":"e01/mem/upd",   "pub_dsk":"e01/dsk", "pub_mem":"e01/mem"},
             
    {"name": "touch15", "module":"svc_touch", "pin":15, "threshold":300,
             "pub_touch":"e01/dht/upd" },
             
    {"name": "touch4",  "module":"svc_touch", "pin":4, "threshold":300,
             "pub_touch":"e01/mem/upd" }

 ]
}


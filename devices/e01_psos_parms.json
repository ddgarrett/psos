{
"name":"PSOS v00.02 - e01 device",
"main":"psos_main",

"defaults": {
    "mqtt_prefix":"e01/",
    "mqtt_name":"office_monitor",
    "mqtt_descr":"e01 - ESP32 Bedroom Temp & Humidity + timed triggers for temp",
    "log_file":"reset_rsn.txt"
    },
  
"NOTE":"wifi, mqtt and i2c (if used) must be first three services",
    
"services": [
    {"name": "wifi", "module":"svc_wifi", "disconnect":false},
    {"name": "mqtt", "module":"svc_mqtt",  "_broker":"docker_esp", "__broker":"docker_home_acer", "broker":"hivemq" },
    
    {"name": "log",  "module":"svc_log",   "pub_log":"e01/log" },
    
    {"name": "usvr", "module":"svc_mqtt_proxy_server" },
    
    {"name": "temp", "module":"svc_dht", "dht_pin":25, "dht22":true,
             "subscr_upd":"e01/dht/upd",   "pub_upd":"e01/dht" },

    {"name": "mem_use", "module":"svc_mem_use", 
             "subscr_upd":"e01/mem/upd",   "pub_upd":"e01/mem" },
             
    {"name": "dsp_temp", "module":"svc_pipe",
             "subscr_in":"e01/dht",  "pub_out":"emp/lcd",
             "format":"['clear',{{'msg':'Temp: {temp}\nHumidity: {hum}\nDev: e01'}}]" },               

    {"name": "dsp_mem", "module":"svc_pipe",
             "subscr_in":"e01/mem",  "pub_out":"emp/lcd",
             "format":"['clear',{{'msg':'Free Memory & Disk\nMem: {mem_free}\nDsk: {disk_free}\nDev: e01'}}]" },
             
    {"name": "trigger", "module":"svc_pub_timer", "pub_wait":300, "sleep_ms":3000,
             "pub_msg":[    "upd",         "upd",        "upd"],
             "pub_topics": ["e01/dht/upd", "emp/dht/upd","d01/dht/upd"] }

 ]
}

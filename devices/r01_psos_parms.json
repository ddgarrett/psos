{
"name":"PSOS v00.02 - r01 device",
"main":"psos_main",

"defaults": {
    "mqtt_prefix":"e02/",
    "mqtt_name":"office_monitor",
    "mqtt_descr":"e02 - ESP32 Office Temperature and Humidity Monitor",
    "log_file":"reset_rsn.txt"
    },
    
"NOTE":"wifi and mqtt must be first two services",
    
"services": [
    {"name": "mqtt", "module":"svc_mqtt_stub" },
    {"name": "i2c0", "module":"svc_i2c", "channel":0 },
    
    {"name": "log",  "module":"svc_log",   "pub_log":"r01/log" },
    
    {"name": "lcd", "module":"svc_lcd", "i2c":"i2c0", "i2c_addr":"0x3C", "timeout":30,
             "lcd_col_cnt":16, "lcd_row_cnt":4, "custom_char":"°⌛", 
             "disp_driver":"ssd1306_lcd",
             "subscr_msg":"r01/lcd" },
             
    {"name": "temp", "module":"svc_dht", "dht_pin":28, "dht22":false,
             "subscr_upd":"r01/dht/upd",   "pub_upd":"local/r01/dht" },
             
    {"name": "dsp_dht_r01", "module":"svc_pipe",
             "subscr_in":"r01/dht",  "pub_out":"local/r01/lcd",
             "format":"['clear',{{'msg':'TEMP & HUMIDITY\nTEMP: {temp}°\nHUM: {hum}%\nDEV: e01'}}]" }
             
    {"name": "trigger", "module":"svc_pub_timer", "pub_wait":30, "sleep_ms":3000,
             "pub_msg":["upd"],
             "pub_topics": ["local/r01/dht/upd"] },

 ]
}